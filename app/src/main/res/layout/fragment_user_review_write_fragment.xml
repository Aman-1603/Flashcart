<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".User_review_write_fragment">


<!--    Topbar-->




<RelativeLayout
    android:id="@+id/topbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/grey_circular_border"
        android:padding="12dp"
        android:src="@drawable/square_icon" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Your Review"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/grey_circular_border"
        android:padding="@dimen/small"
        android:src="@drawable/heart" />





</RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar">



      <com.blogspot.atifsoftwares.circularimageview.CircularImageView
          android:id="@+id/image1"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:layout_centerHorizontal="true"
          android:background="@drawable/shape_circle02"
          android:src="@drawable/baseline_shopping_cart_24"/>

        <TextView
            android:id="@+id/shopnameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:layout_below="@id/image1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How was your experience with these seller ?"
            android:layout_below="@id/shopnameTv"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15dp"/>



        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your feedback is way important for use to improve \n                            our quality service"
            android:layout_below="@id/text1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:progressBackgroundTint="#9F9D9D"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>


        <EditText
            android:id="@+id/writewdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingbar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_rec02"
            android:gravity="top"
            android:textColorHint="@color/black"
            android:hint="  Write your review here ....."
            android:minHeight="100dp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/writewdittext"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"

            android:src="@drawable/baseline_done_24" />


    </RelativeLayout>





</RelativeLayout>