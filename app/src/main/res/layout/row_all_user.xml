<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/design_default_color_primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/UserProfileTv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/baseline_person_24"/>

        <TextView
            android:id="@+id/UserNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/UserProfileTv"
            android:text="User Name"
            android:textColor="#3D65F4"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/UserEmailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/UserProfileTv"
            android:layout_below="@id/UserNameTv"
            android:text="User Email"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/UserPhoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/UserProfileTv"
            android:layout_below="@id/UserEmailTv"
            android:text="UserPhone"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>




        <TextView
            android:id="@+id/UserCityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/UserProfileTv"
            android:layout_below="@id/UserPhoneTv"
            android:text="User City"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/UserOnlineTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/UserProfileTv"
            android:layout_below="@id/UserCityTv"
            android:text="User Online Status"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_navigate_next_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>





    </RelativeLayout>

</androidx.cardview.widget.CardView>