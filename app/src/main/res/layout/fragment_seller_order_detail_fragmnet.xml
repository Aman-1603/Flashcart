<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SellerPage.SellerOrderDetailFragmnet">



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:fitsSystemWindows="true"
        android:background="#040404">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorAccent"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        app:title="Orders"
        android:id="@+id/collapsing_toolbar">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Id : "
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>


            <TextView
                android:id="@+id/orderdetailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111111"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_toEndOf="@id/text1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date : "
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/orderdetaildate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/1/2023"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/orderdetailId"
                android:layout_toEndOf="@id/text2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Status : "
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/orderdetailstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In progress"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/orderdetaildate"
                android:layout_toEndOf="@id/text3"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer Email : "
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text3"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/orderdetailshopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ansariaman1603@gmail.com"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text3"
                android:layout_toEndOf="@id/text4"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer Phone : "
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text4"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/orderdetailphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999999999"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/orderdetailshopname"
                android:layout_toEndOf="@id/text5"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery address : "
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text5"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/orderdetailaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="303 shopper plaza cg road"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/orderdetailphone"
                android:layout_toEndOf="@id/text7"
                android:textStyle="bold"/>



            <RelativeLayout
                android:id="@+id/layout7"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_below="@id/text7"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_rec08">


                <TextView
                    android:id="@+id/text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:layout_centerHorizontal="true"/>


                <TextView
                    android:id="@+id/subtotalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text14"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="â‚¹5000"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />



            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/layout8"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_below="@id/text7"
                android:layout_toEndOf="@id/layout7"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_rec08">


                <TextView
                    android:id="@+id/text15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Items"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"
                    android:layout_centerHorizontal="true"/>


                <TextView
                    android:id="@+id/totalitemTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_below="@id/text15"
                    android:layout_centerHorizontal="true"/>





            </RelativeLayout>


        </RelativeLayout>





    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </com.google.android.material.appbar.AppBarLayout>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        android:background="@drawable/shape_collapselayout"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/row_orderdetail_user"/>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:src="@drawable/baseline_add_location_alt_24"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|end" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/EditOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:src="@drawable/baseline_edit_24"
        app:fabSize="normal"
        app:layout_anchor="@id/goMap"
        app:layout_anchorGravity="bottom|end" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/generatepdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:src="@drawable/baseline_edit_24"
        app:fabSize="normal"
        app:layout_anchor="@id/goMap"
        app:layout_anchorGravity="left" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>